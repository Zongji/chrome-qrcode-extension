{
  "manifest_version": 2,
  "name": "QRCode Generator",
  "description": "Generate QRcode of a web page. ",
  "icons": {
    "128": "icon_128.png"
  },
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "qr_19.png",
      "38": "qr_38.png"
    },
    "default_title": "QRCode generator",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ]
}
